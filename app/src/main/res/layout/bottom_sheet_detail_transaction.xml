<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_bottom_sheet_title"
        style="@style/Text.Primary.Bold.16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:text="Detail Transaksi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <com.google.android.material.textview.MaterialTextView-->
    <!--        style="@style/Text.Primary.Bold.18"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="X"-->
    <!--        android:layout_marginTop="16dp"-->
    <!--        android:layout_marginRight="24dp"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent" />-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_transaction"
        style="@style/Text.Secondary.Bold.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Judul :"
        app:layout_constraintStart_toStartOf="@id/tv_bottom_sheet_title"
        app:layout_constraintTop_toBottomOf="@id/tv_bottom_sheet_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        style="@style/Text.Primary.Bold.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_transaction"
        app:layout_constraintEnd_toEndOf="@id/tv_bottom_sheet_title"
        app:layout_constraintStart_toEndOf="@id/tv_title_transaction"
        app:layout_constraintTop_toTopOf="@id/tv_title_transaction"
        tools:text="My Republic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_type"
        style="@style/Text.Secondary.Bold.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipe Transaksi :"
        app:layout_constraintStart_toStartOf="@id/tv_title_transaction"
        app:layout_constraintTop_toBottomOf="@id/tv_title_transaction" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_type"
        style="@style/Text.Primary.Bold.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_type"
        app:layout_constraintEnd_toEndOf="@id/tv_bottom_sheet_title"
        app:layout_constraintStart_toEndOf="@id/tv_title_type"
        app:layout_constraintTop_toTopOf="@id/tv_title_type"
        tools:text="Pengeluaran" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_category"
        style="@style/Text.Secondary.Bold.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kategori Transaksi :"
        app:layout_constraintStart_toStartOf="@id/tv_title_type"
        app:layout_constraintTop_toBottomOf="@id/tv_title_type" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_category"
        style="@style/Text.Primary.Bold.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_category"
        app:layout_constraintEnd_toEndOf="@id/tv_bottom_sheet_title"
        app:layout_constraintStart_toEndOf="@id/tv_title_category"
        app:layout_constraintTop_toTopOf="@id/tv_title_category"
        tools:text="Tagihan" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_amount"
        style="@style/Text.Secondary.Bold.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nominal :"
        app:layout_constraintStart_toStartOf="@id/tv_title_category"
        app:layout_constraintTop_toBottomOf="@id/tv_title_category" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_amount"
        style="@style/Text.Primary.Bold.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_amount"
        app:layout_constraintEnd_toEndOf="@id/tv_bottom_sheet_title"
        app:layout_constraintStart_toEndOf="@id/tv_title_amount"
        app:layout_constraintTop_toTopOf="@id/tv_title_amount"
        tools:text="Rp. 300.000" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title_note"
        style="@style/Text.Secondary.Bold.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Catatan :"
        app:layout_constraintStart_toStartOf="@id/tv_title_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_title_amount" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_note"
        style="@style/Text.Primary.Bold.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@id/tv_amount"
        app:layout_constraintStart_toStartOf="@id/tv_title_note"
        app:layout_constraintTop_toBottomOf="@id/tv_title_note"
        tools:text="Bulan September" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_note">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:text="Hapus"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:theme="@style/Text.White.Bold.14"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@id/btn_cancel"
            app:layout_constraintEnd_toStartOf="@id/btn_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/blue_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            style="@style/Text.White.Bold.14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/blue_dark"
            android:padding="12dp"
            android:text="Ubah"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_delete"
            app:layout_constraintTop_toTopOf="@id/btn_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:text="Kembali"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:theme="@style/Text.White.Bold.14"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            app:strokeColor="@color/blue_dark" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>