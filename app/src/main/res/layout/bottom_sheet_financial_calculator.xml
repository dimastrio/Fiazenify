<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_bottom_sheet_title"
        style="@style/Text.Primary.Bold.16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Pilih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retirement_fund"
        style="@style/Widget.MaterialComponents.Button.IconOnly"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:backgroundTint="?android:windowBackground"
        app:cornerRadius="35dp"
        app:icon="@drawable/ic_retirement"
        app:iconTint="@color/blue_dark"
        app:layout_constraintStart_toStartOf="@+id/tv_bottom_sheet_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_sheet_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_retirement_fund"
        style="@style/Text.Primary.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Dana\nPensiun"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_retirement_fund"
        app:layout_constraintStart_toStartOf="@+id/btn_retirement_fund"
        app:layout_constraintTop_toBottomOf="@+id/btn_retirement_fund" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_emergency_fund"
        style="@style/Widget.MaterialComponents.Button.IconOnly"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        app:backgroundTint="?android:windowBackground"
        app:cornerRadius="35dp"
        app:icon="@drawable/ic_emergency"
        app:iconTint="@color/blue_dark"
        app:layout_constraintStart_toEndOf="@+id/btn_retirement_fund"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_sheet_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_emergency_fund"
        style="@style/Text.Primary.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dana\nDarurat"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tv_retirement_fund"
        app:layout_constraintEnd_toEndOf="@+id/btn_emergency_fund"
        app:layout_constraintStart_toStartOf="@+id/btn_emergency_fund"
        app:layout_constraintTop_toBottomOf="@+id/btn_emergency_fund" />

